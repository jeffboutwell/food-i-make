generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Recipe {
  id          Int      @id @default(autoincrement())
  cookTime    Int
  description String
  directions  String[]
  images      String[]
  name        String
  notes       String
  prepTime    Int
  servings    String
  slug        String   @unique
  source      Json?
  tags        String[]
  user        Json?
  ingredients Json
}

model User {
    id          Int      @id @default(autoincrement())
    authId      String   @unique
    name        String
    firstName   String?
    lastName    String?
    email       String   @unique
    image       String?
}
